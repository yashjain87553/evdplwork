<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\BetterSlider\Block\Banner" name="bannerslider.cms.page.content.top" template="Mageplaza_BetterSlider::banner.phtml" before="+">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">cms-page-content-top</argument>
                </action>
            </block>
            <block class="Magento\Cms\Block\Page" name="cms_page"/>
        </referenceContainer>
    </body>
</page>