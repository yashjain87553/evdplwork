<?php
$brands = $block->getCollection();
$count = 0;
?>

<div class="block block-brand-thumbnail widget"
     id="block-brand-thumbnail-container">
    <div class="block-title">
        <strong role="heading" aria-level="2" class="block-subtitle"
                id="thumbnail-brand-subtitle"><?php echo $block->getTitle(
            ); ?></strong>
    </div>
    <div class="block-content">
        <div class="filter-options-content" id='brand-thumbnail-menu'>
            <ul>
                <?php foreach ($brands as $brand) :

                    if ($brand) :
                        $count++;
                    endif;
                    if ($count > $block->getLimit()) {
                        break;
                    }

                    ?>

                    <li>
                        <a href='<?php echo $block->getBrandUrl($brand) ?>'>
                            <div class="brand-items"
                                 id="item-<?php echo $brand->getId(); ?>">
                                <img class="img-responsive brand-thumbnail-image"
                                     src="<?php
                                     echo ($brand->getImage())
                                         ? $block->resizeImage($brand, 80)
                                         : $block->helper()->getBrandImageUrl(
                                             $brand
                                         );
                                     ?>"
                                     style="width: 40px;height: 40px; float: left;"/>
                                <span><?php echo $brand->getValue() ?></span>
                            </div>
                        </a>
                    </li>

                <?php endforeach; ?>

            </ul>
        </div>
        <div class="pages" id="brand-thumbnail-bottom" style="margin-top:10px">
            <a class="action" href="<?php echo $block->getBrandUrl() ?>" style="width:auto;">
                <span>View All</span>
            </a>
        </div>
    </div>

</div>
